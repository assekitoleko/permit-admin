<h1>Alerts</h1>

<%= form_with(url: alerts_path, method: 'get') do %>
  <%= text_field(nil, :search, value: @search) %>
  <button class="blue-button h-10">Search</button>
<% end %>

<div class="Table mt-4">
  <div class="Table-header">
    <div class="Table-cell">Body</div>
    <div class="Table-cell">Link</div>
    <div class="Table-cell">Created At</div>
  </div>
  <div class="Table-body">
    <% @alerts.map do |alert| %>
      <div class="Table-row">
        <div class="Table-cell"><%= alert.body %></div>
        <div class="Table-cell"><%= alert.link %></div>
        <div class="Table-cell"><%= alert.created_at.strftime("%a %b %e %Y %T") %></div>
      </div>
    <% end %>
  </div>
</div>
